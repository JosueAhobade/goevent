<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_goevent"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_goevent"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- Définir IntroActivity comme activité principale -->
        <activity
            android:name=".intro.IntroActivity"
            android:exported="true"
            tools:ignore="ExtraText"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- OnboardingActivity -->
        <activity
            android:name=".onboarding.OnboardingActivity"
            android:exported="true"
            android:theme="@style/AppTheme"/>

        <!-- IntroAnimatedActivity -->
        <activity
            android:name=".intro.IntroAnimatedActivity"
            android:exported="true"
            android:theme="@style/AppTheme"/>

        <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <!-- AccueilEvents -->
        <activity
            android:name=".events.AccueilEvents"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>

        <!-- DétailEvents -->
        <activity
            android:name=".events.DetailEvent"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"/>

        <!-- Profile -->
        <activity
            android:name=".auth.Profile"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            tools:ignore="Instantiatable" />

        <!-- Sign in -->
        <activity
            android:name=".auth.Signin"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            tools:ignore="Instantiatable" />

        <!-- Sign up -->
        <activity
            android:name=".auth.Signup"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            tools:ignore="Instantiatable" />


    </application>

</manifest>
