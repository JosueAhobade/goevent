<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gris"> <!-- Fond général -->

    <!-- Contenu Principal -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_above="@id/footer">

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:padding="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SearchView
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:iconifiedByDefault="false"
                    android:queryHint="Rechercher..." />

                <SeekBar
                    android:id="@+id/radiusSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="25000"
                    android:progress="5000"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Body -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Localisation : Inconnue"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:drawableStart="@drawable/ic_localisation"
                    android:drawableTint="@color/orange"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:drawablePadding="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Zone dynamique du body -->
        <FrameLayout
            android:id="@+id/body_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Footer -->
    <androidx.cardview.widget.CardView
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <!-- Bouton Événements -->
            <Button
                android:id="@+id/button_events"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Événements"
                android:drawableLeft="@drawable/ic_calendar"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#000000"/>

            <!-- Bouton Accueil -->
            <Button
                android:id="@+id/button_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accueil"
                android:drawableLeft="@drawable/ic_home"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#000000"/>

            <!-- Bouton Profil -->
            <Button
                android:id="@+id/button_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profil"
                android:drawableLeft="@drawable/ic_profile"
                android:gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
