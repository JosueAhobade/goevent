<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Image principale avec l'icône cœur -->
    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_test"
        android:contentDescription="Event Image"
        android:scaleType="centerCrop"/>

    <!-- Icône cœur (en haut à droite de l'image) -->
    <ImageView
        android:id="@+id/heartIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/eventImage"
        android:layout_alignEnd="@id/eventImage"
        android:layout_margin="8dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_heart"
        android:contentDescription="Like heart"/>

    <!-- Titre de l'événement -->
    <TextView
        android:id="@+id/eventTitle"
        android:layout_below="@id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de l'événement"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <!-- Description de l'événement -->
    <TextView
        android:id="@+id/eventDescription"
        android:layout_below="@id/eventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description de l'événement"
        android:textSize="14sp"
        android:layout_marginTop="8dp"/>

    <!-- Boutons J'aime et Étoiles -->
    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_below="@id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <!-- Bouton J'aime -->
        <Button
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J’aime"
            android:padding="8dp"/>

        <!-- Espacement -->
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <!-- Bouton Étoiles -->
        <Button
            android:id="@+id/starButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Étoiles"
            android:padding="8dp"/>
    </LinearLayout>
    <!-- android:drawableLeft="@drawable/ic_star" -->
    <!-- android:drawableLeft="@drawable/ic_like" -->
    <!-- android:background="@drawable/rounded_bg" -->

</RelativeLayout>
